{
  "name": "multiview",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "cross-env PM2_HOME=./.pm2 pm2 delete 'internal:svelte' 'internal:renew-cookies' 'internal:bun-server' ; cross-env PM2_HOME=./.pm2 pm2 start ./ecosystem.dev.config.cjs",
    "build": "vite build",
    "preview": "cross-env PM2_HOME=./.pm2 pm2 delete 'internal:svelte' 'internal:renew-cookies' 'internal:bun-server'; cross-env PM2_HOME=./.pm2 pm2 start ./ecosystem.prod.config.cjs",
    "pm2": "cross-env PM2_HOME=./.pm2 pm2",
    "kill": "cross-env PM2_HOME=./.pm2 pm2 kill",
    "clean-dev": "cross-env PM2_HOME=./.pm2 pm2 delete all; cross-env PM2_HOME=./.pm2 pm2 start ./ecosystem.dev.config.cjs",
    "clean-preview": "cross-env PM2_HOME=./.pm2 pm2 delete all; cross-env PM2_HOME=./.pm2 pm2 start ./ecosystem.prod.config.cjs",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.1",
    "@eslint/js": "^9.39.2",
    "@eslint/migrate-config": "^2.0.2",
    "@sveltejs/adapter-auto": "^7.0.0",
    "@sveltejs/kit": "^2.50.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "^1.3.9",
    "@types/node": "^25.3.2",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.14.0",
    "globals": "^17.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "prisma": "^7.4.1",
    "svelte": "^5.48.2",
    "svelte-adapter-bun": "^1.0.1",
    "svelte-check": "^4.3.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@fontsource/ibm-plex-sans": "^5.2.8",
    "@prisma/adapter-better-sqlite3": "^7.4.1",
    "@prisma/adapter-libsql": "^7.4.1",
    "@prisma/client": "^7.4.1",
    "better-sqlite3": "^12.6.2",
    "cross-env": "^10.1.0",
    "dotenv": "^17.3.1",
    "hls.js": "^1.6.15",
    "pm2": "^6.0.14",
    "puppeteer": "^24.37.2",
    "queue": "^7.0.0",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  }
}
